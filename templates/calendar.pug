doctype html
html
  head
    meta(charset="UTF-8")
    title Calendar

    style.
      body { font-family: sans-serif; box-sizing: border-box; }
      body * { box-sizing: inherit; }
      table { border-collapse: collapse; }
      table, th, td { border: 1px solid #999; }
      p { margin: 0; }

      tr:nth-child(even) { background-color: #eee; }
      thead tr { background-color: #fff; }
      th, td { padding: 3px; }
      thead th { background-color: #000; color: #fff; border-color: #000; }
      th, thead h1 { font-size: smaller; }
      thead h1 { margin: 0; text-align: center; }

      tbody td { color: #00c; text-align: center; min-width: 22px }
      tbody th { font-weight: normal; }
      tbody th strong { display: block; }

      section { page-break-inside: avoid; }

      .medication, .triggers { font-size: smaller; margin: 10px 0; color: #00c; }
      .medication strong, .triggers strong { color: #000; }

  body
    each month in months
      section(id="month-" + month.identifier)
        table
          thead
            tr
              td
                h1= month.title

              each day in month.days
                th #{day.number()}

          tbody
            tr
              th
                | Céphalée
                strong 1 2 3
              each day in month.days
                td= day.pain()

            tr
              th Aura
              each day in month.days
                td
                  if day.aura()
                    | ✓

            tr
              th Règles
              each day in month.days
                td
                  if day.menstruation()
                    | ✓

            tr
              th Déclencheur
              each day in month.days
                td= (day.trigger() || '')[0]

            tr
              th Traitement
              each day in month.days
                td= (day.medications()[0] || '')[0]

            tr
              th Traitement
              each day in month.days
                td= (day.medications()[1] || '')[0]

            tr
              th Traitement
              each day in month.days
                td= (day.medications()[2] || '')[0]

            tr
              th Effet du traitement
              each day in month.days
                td
                  if day.effective()
                    | ✓

        p.medication
          strong Traitements:
          = ' ' + month.medication.join(', ') + '.'

        p.triggers
          strong Déclencheurs:
          = ' ' + month.triggers.join(', ') + '.'
